PACKAGES = assimp

ifneq (@MXE_CROSS@,yes)
PACKAGES += sdl2 sdl2_image
endif

TOP = $(shell pwd)
USR = $(TOP)/usr

CC := @CC@
CXX := @CXX@
AR := @AR@
SED := @SED@
RANLIB := @RANLIB@
INSTALL := @INSTALL@

CMAKE_ARGS := -DCMAKE_INSTALL_PREFIX=$(USR)
ifeq (@MXE_CROSS@,yes)
CMAKE_ARGS += -DCMAKE_TOOLCHAIN_FILE=@MXE_CMAKE_TOOLCHAIN_FILE@
endif

all: $(PACKAGES)

clean: $(patsubst %,clean-%,$(PACKAGES))
	rm -rf $(USR)

assimp:
	cd source/assimp && \
	cmake -D BUILD_ASSIMP_SAMPLES=OFF -D BUILD_ASSIMP_TOOLS=OFF -D ENABLE_BOOST_WORKAROUND=ON $(CMAKE_ARGS) . && \
	$(MAKE) && \
	$(MAKE) install

sdl2:
	cd source/sdl2 && \
	./autogen.sh && \
	./configure --prefix=$(USR) --enable-static --disable-shared && \
	$(MAKE) && \
	$(MAKE) install

sdl2_image:
	cd source/sdl2_image && \
	./autogen.sh && \
	./configure --prefix=$(USR) --enable-static --disable-shared && \
	$(MAKE) && \
	$(MAKE) install

clean-assimp:
	cd source/assimp && \
	$(MAKE) clean

clean-sdl2:
	cd source/sdl2 && \
	$(MAKE) clean

clean-sdl2_image:
	cd source/sdl2_image && \
	$(MAKE) clean
